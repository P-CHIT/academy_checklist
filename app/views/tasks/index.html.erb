<div class="min-h-screen">
  <div class="max-w-md lg:max-w-6xl mx-auto p-4">
    <div class="lg:flex lg:gap-6 lg:h-screen space-y-6 lg:space-y-0">
      
      <div class="lg:w-1/3 lg:flex lg:flex-col lg:justify-start lg:items-center lg:pt-6 space-y-4 lg:space-y-6">
        <div class="text-center">
          <h1 class="text-3xl lg:text-4xl font-bold text-gray-800 mb-2 lg:mb-3">My Checklist</h1>
        </div>

        <div class="text-center">
          <div class="w-24 h-24 lg:w-40 lg:h-40 mx-auto mb-4 rounded-full overflow-hidden shadow-lg lg:shadow-2xl">
            <%= image_tag "profile_pic.jpg", alt: "Profile Photo", class: "w-full h-full object-cover" %>
          </div>
          <p class="text-sm lg:text-xl lg:font-semibold text-gray-500 lg:text-gray-800 mb-2">Phuchit Uappapunsetty</p>
          <%= link_to brag_quests_path, class: "inline-block px-4 py-2 lg:px-6 lg:py-3 bg-black text-white text-sm lg:text-base rounded-lg lg:rounded-xl font-medium lg:font-semibold hover:bg-gray-800 lg:hover:scale-105 lg:shadow-lg lg:hover:shadow-xl transition-all" do %>
            📄 Brag Document 2025
          <% end %>
        </div>
      </div>

      <div class="lg:flex-1 lg:flex lg:flex-col lg:pt-6 space-y-4 lg:space-y-4">
        
        <div class="bg-white rounded-lg lg:rounded-2xl shadow lg:shadow-xl p-4 lg:p-6">
          <h2 class="text-lg lg:text-xl font-semibold mb-4 lg:text-center">Add New Task</h2>
          
          <%= form_with model: @task, local: true do |form| %>
            <div class="space-y-3 lg:space-y-0 lg:flex lg:gap-4">
              <%= form.text_field :title, 
                  placeholder: "What needs to be done?", 
                  class: "w-full lg:flex-1 px-4 py-3 border lg:border-2 border-gray-300 rounded-lg lg:rounded-xl focus:outline-none focus:ring-2 lg:focus:ring-4 focus:ring-blue-500 lg:focus:ring-blue-200 lg:focus:border-blue-500 text-base" %>
              
              <%= form.submit "Add Task", 
                  class: "w-full lg:w-auto px-6 py-3 bg-black text-white rounded-lg lg:rounded-xl font-medium lg:font-semibold cursor-pointer lg:shadow-lg lg:hover:shadow-xl lg:hover:scale-105 transition-all" %>
            </div>
          <% end %>
        </div>


        <div class="bg-white rounded-lg lg:rounded-2xl shadow lg:shadow-xl overflow-hidden">
          <div class="p-4 border-b lg:bg-gradient-to-r lg:from-gray-50 lg:to-white">
            <h2 class="text-lg lg:text-xl font-semibold lg:text-center">Your Tasks (<%= @tasks.count %>)</h2>
          </div>
          
          <div class="divide-y max-h-96 lg:max-h-[350px] overflow-y-auto">
            <% if @tasks.any? %>
              <% @tasks.each do |task| %>
                <div class="p-4 flex items-center justify-between hover:bg-gray-50 lg:transition-colors">
                  <div class="flex items-center space-x-3 lg:space-x-4 flex-1">
                    <%= button_to toggle_task_path(task), 
                        method: :patch,
                        class: "w-6 h-6 rounded cursor-pointer bg-transparent flex items-center justify-center lg:transition-all lg:transform lg:hover:scale-110 #{task.status ? '' : 'border-2 border-gray-300 hover:border-gray-300 lg:hover:border-green-500'}" do %>
                      <% if task.status %>
                        <%= image_tag "check.png", alt: "Completed", class: "h-5.5 w-5.5" %>
                      <% end %>
                    <% end %>
                    
                    <span class="break-all text-gray-800 text-sm lg:text-base lg:font-medium <%= task.status ? 'line-through text-gray-500' : '' %>">
                      <%= task.title %>
                    </span>
                  </div>
                  
                  <%= button_to task_path(task), 
                      method: :delete,
                      class: "text-red-600 lg:text-gray-400 hover:text-red-800 lg:hover:text-red-500 p-1 lg:p-2 bg-transparent border-none cursor-pointer lg:hover:bg-red-50 lg:rounded-full lg:transition-all",
                      data: { turbo_confirm: "Are you sure?" },
                      title: "Delete task" do %>
                    🗑️
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <div class="p-8 lg:p-12 text-center text-gray-500">
                <div class="lg:text-4xl lg:mb-4 hidden lg:block">📝</div>
                <p class="text-lg lg:text-xl lg:font-semibold mb-2 lg:mb-3">No tasks yet!</p>
                <p class="text-sm lg:text-base">Add your first task above<span class="lg:inline hidden"> to get started</span>.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>